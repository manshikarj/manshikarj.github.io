{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
  "title": {
    "text": "New COVID cases by region",
    "subtitle":"From raw data",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start",
    "color": "black"
  },
  
   "data": {
    "url": "https://raw.githubusercontent.com/manshikarj/manshikarj.github.io/main/region_2021-10-24.csv",
    "format": {"type": "csv"}
  },
   
  "transform":[
        
    {"filter": {
      "field": "areaName", 
      "oneOf": ["London", "South East", "North East"]}
      }
  ],
  
  "height": 300,
  "width": 310,
   
  "mark": {"type": "line", "point": false},
 
  "encoding": {

    "x": {
      "field": "date",
      "type": "temporal",
      "title":"months",
      "axis": {"grid": false}
    },

    "y": {
      "field": "newCasesByPublishDate",
      "type": "quantitative",
      "title": "new cases",
      "axis": {"grid": false}
    },

    "color": {
      "field": "areaName",
      "type": "nominal",
      "scale": {"scheme": "set2"},
      "title": "",
      "legend": {
        "orient": "top-left", 
        "fillColor": "#ffffff"}
    }
}
}
